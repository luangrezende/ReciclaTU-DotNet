<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>PROJETO | @ViewBag.Title</title>

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    @* API GOOGLE MAPS *@
    <script src="https://maps.googleapis.com/maps/api/js?key= @Request["APIKeyMaps"]"></script>

    @* STYLES *@
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Scripts/plugins/jquery-ui/jqueryuiStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/Google")

</head>
    <body>
        <div id="wrapper" class="@Html.PageClass()">
            @Html.Partial("_Navigation")
            <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">
                @Html.Partial("_TopNavbar")
                @RenderBody()
                @Html.Partial("_Footer")
            </div>
        </div>

        @* SCRIPTS *@
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/plugins/dataTables")
        @Scripts.Render("~/bundles/inputmask")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/plugins/slimScroll")
        @Scripts.Render("~/bundles/inspinia")
        @Scripts.Render("~/plugins/sweetAlert")
        @RenderSection("scripts", required: false)

        @* DEFAULT *@
        <script>
            //AJAX RESULTS
            function OnFailure(response) {
                $.ajax({
                    statusCode: {
                        404: function () {
                            swal({
                                title: "Pronto!",
                                text: "Página não encontrada\n" + response,
                                type: "success",
                                showCancelButton: false,
                                closeOnConfirm: false,
                                confirmButtonText: "Ok",
                                confirmButtonColor: "#1ab394"
                            }, function () {
                                location.reload();
                            });
                        },
                        500: function () {
                            swal({
                                title: "Pronto!",
                                text: "Erro de servidor\n" + response,
                                type: "success",
                                showCancelButton: false,
                                closeOnConfirm: false,
                                confirmButtonText: "Ok",
                                confirmButtonColor: "#1ab394"
                            }, function () {
                                location.reload();
                            });
                        }
                    }
                });
            }
            function OnSuccess(response) {
                //$("#modalOpcoes").modal("hide");
                swal({
                    title: "Pronto!",
                    text: response,
                    type: "success",
                    showCancelButton: false,
                    closeOnConfirm: false,
                    confirmButtonText: "Ok",
                    confirmButtonColor: "#1ab394"
                }, function () {
                    location.reload();
                });
            }
        </script>
    </body>
</html>
