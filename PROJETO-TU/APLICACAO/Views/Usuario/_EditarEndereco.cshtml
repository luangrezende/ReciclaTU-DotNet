@model DATABASE.Models.Enderecos

@{
    Layout = null;
}

<div class="modal fade" id="modalOpc" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar endereço</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="enderecoPesquisa" value="">
                        <small class="text-muted">Utilize o campo acima para pesuisar um endereço</small>
                    </div>
                    <div class="col-lg-2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="button" id="btnPesquisaEndereco">Pesquisar</button>
                    </div>
                </div>
                @using (Ajax.BeginForm("EditarEndereco", "Usuario", FormMethod.Post, new AjaxOptions
                {
                    OnSuccess = "OnSuccess",
                    OnFailure = "OnFailure"
                }))
                {
                    <div class="row">
                        <hr />
                        @Html.AntiForgeryToken()
                        <div class="col-lg-12 form-group">
                            @Html.LabelFor(c => c.Descricao)
                            @Html.EditorFor(c => c.Descricao, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True" } })
                        </div>
                        <div class="col-lg-9 form-group">
                            @Html.LabelFor(c => c.Rua)
                            @Html.EditorFor(c => c.Rua, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @readonly = "true" } })
                        </div>
                        <div class="col-lg-3 form-group">
                            @Html.LabelFor(c => c.Numero)
                            @Html.EditorFor(c => c.Numero, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @readonly = "true" } })
                        </div>
                        <div class="col-lg-6 form-group">
                            @Html.LabelFor(c => c.Complemento)
                            @Html.EditorFor(c => c.Complemento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>
                        <div class="col-lg-6 form-group">
                            @Html.LabelFor(c => c.Cidade)
                            @Html.EditorFor(c => c.Cidade, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @readonly = "true" } })
                        </div>
                        <div class="col-lg-5 form-group">
                            @Html.LabelFor(c => c.Estado)
                            @Html.EditorFor(c => c.Estado, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @readonly = "true" } })
                        </div>
                        <div class="col-lg-3 form-group">
                            @Html.LabelFor(c => c.Pais)
                            @Html.EditorFor(c => c.Pais, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @readonly = "true" } })
                        </div>
                        <div class="col-lg-4 form-group">
                            @Html.LabelFor(c => c.CEP)
                            @Html.EditorFor(c => c.CEP, new { htmlAttributes = new { @class = "form-control form-control-sm", @Required = "True", @Type = "textarea", @readonly = "true" } })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm pull-left" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary btn-sm pull-right">Cadastrar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>